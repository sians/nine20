<%= simple_form_for([@issue, @media]) do |f| %>
  <%= f.input :title %>
  <%= f.input :published %>
  <%= f.input :minutes %>
  <%= f.input :date_published %>
  <%= f.input :blurb %>
  <%= f.input :content %>
  <%= f.input :video_url %>
  <%= f.input :audio_url %>
  <%= f.input :cover_image %>
  <%= f.input :cover_image_cache, as: :hidden %>


  <%= f.select :media_type, options_for_select(["Article", "Podcast", "Video"]) %>
  <%= f.select :issue_id, options_for_select(Issue.all.map{|issue|[issue.title, issue.id]}) %>

  <%#= f.select :user_ids, options_for_select(User.all.map{|user|[user.first_name, user.id]}) %>
  <%= f.input :user_ids, collection: User.all.map{|user|[user.first_name, user.id]}, input_html: { multiple: true } %>


  <%= f.button :submit, "Submit" %>


<% end %>
