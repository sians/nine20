<div class="new-user">
  <% if params[:action] == 'new' %>
    <h3>Create New User</h3>
  <% else %>
    <h3>Edit User Details</h3>
  <% end %>

  <div class="issue-form">

    <%= simple_form_for [:admin, @user], url: admin_update_user_path, method: :put do |f| %>
        <div class="form-group">
          <%= f.input :first_name,
                      label: 'First name:',
                      placeholder: @user.first_name,
                      required: false %>
        </div>
        <div class="form-group">
          <%= f.input :last_name,
                      label: 'Last name:',
                      placeholder: @user.last_name,
                      required: false %>
        </div>
        <div class="form-group">
          <%= f.input :email,
                      label: 'Email:',
                      placeholder: @user.email,
                      required: false %>
        </div>
        <div class="form-group">
          <%= f.input :website,
                      label: "Website URL:",
                      placeholder: @user.website,
                      required: false %>
        </div>
        <div class="form-group">
          <%= f.input :bio,
                      label: "Bio:",
                      placeholder: @user.bio,
                      required: false %>
        </div>

        <%= f.button :submit, class: "btn-ninetwenty"%>
    <% end %>

  </div>

</div>
